# --- Database ---
DB_TYPE=postgresdb
DB_POSTGRESDB_HOST=postgres
DB_POSTGRESDB_PORT=5432
DB_POSTGRESDB_DATABASE=yourdb
DB_POSTGRESDB_USER=youruser
DB_POSTGRESDB_PASSWORD=yourpassword

# --- Queue / Redis ---
EXECUTIONS_MODE=queue
OFFLOAD_MANUAL_EXECUTIONS_TO_WORKERS=true
QUEUE_HEALTH_CHECK_ACTIVE=true
QUEUE_BULL_REDIS_HOST=redis
QUEUE_BULL_REDIS_PORT=6379
QUEUE_BULL_REDIS_DUALSTACK=false

# --- Security ---
N8N_ENCRYPTION_KEY=changeme
N8N_ENFORCE_SETTINGS_FILE_PERMISSIONS=true
N8N_RESTRICT_FILE_ACCESS_TO=/home/node
N8N_GIT_NODE_DISABLE_BARE_REPOS=true

# --- Networking ---
N8N_HOST=example.com
N8N_PROTOCOL=https
WEBHOOK_URL=https://example.com
N8N_PROXY_HOPS=1

# --- Runners ---
N8N_RUNNERS_ENABLED=true
N8N_RUNNERS_MODE=external
N8N_RUNNERS_AUTH_TOKEN=changeme
N8N_RUNNERS_BROKER_LISTEN_ADDRESS=0.0.0.0

# --- Time ---
TZ=Pacific/Auckland
GENERIC_TIMEZONE=Pacific/Auckland
